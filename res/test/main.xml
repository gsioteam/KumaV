<refresh loading="$loading">
    <attr:onRefresh>
        <callback function="onRefresh"/>
    </attr:onRefresh>
    <attr:onLoadMore>
        <callback function="onLoadMore"/>
    </attr:onLoadMore>
    <listview itemCount="length(${list})" padding="ltrb(0,0,0,56)">
        <attr:builder>
            <Function returnType='Widget'>
                <script>
                    set("item", ${list[args[1]]})
                </script>
                <listtile>
                    <attr:onTap>
                        <callback function="onPressed" args="array(${args[1]})"/>
                    </attr:onTap>
                    <attr:leading>
                        <img src="${item.img}" width="48" height="48" fit="cover"/>
                    </attr:leading>
                    <attr:title>
                        <text>${item.title}</text>
                    </attr:title>
                    <attr:subtitle>
                        <text>${item.subtitle}</text>
                    </attr:subtitle>
                </listtile>
            </Function>
        </attr:builder>
    </listview>
</refresh>